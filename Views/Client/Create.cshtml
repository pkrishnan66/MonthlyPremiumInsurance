
@{
    ViewBag.Title = "Create";
}
<script src="~/Scripts/angular.min.js"></script>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/bootstrap.js"></script>
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/TALPremiumInsuranceScripts/ClientPremium.js"></script>
<link href="~/StyleSheet/clientPremium.css" rel="stylesheet" />

<div ng-app="ClientPremiumInsurance">
    <div class="heightContainer">
    </div>
    <div class="row">
        <div class="col-md-4"><b>CALCULATE MONTHLY PREMIUMS</b></div> 
        <div class="col-md-2">@Html.ActionLink("Back", "ClientPremiumList", "Client")</div>
        
    </div>
    <div class="heightContainerMonthlyPremium">
        
    </div>
    <form name="AddClientPremiumForm" ng-submit="createClientPremium(createClientPremium)" ng-controller="ClientPremiumController">
        <table border="0">
            <tr>
                <td>Name</td>
                <td><input type="text" ng-model="createClientPremium.Name" required />*</td>
            </tr>
            <tr>
                <td>Date Of Birth</td>
                <td><input type="date" ng-change="updateAge(createClientPremium.Date)" ng-model="createClientPremium.Date" required />*</td>
            </tr>
            <tr>
                <td>Age</td>
                <td><input type="text" ng-disabled="true" ng-model="createClientPremium.Age" />*</td>
            </tr>
            <tr>
                <td>Death Insured Sum</td>
                <td><input type="number" true" ng-model="createClientPremium.DeathSumInsured " />*
            <tr>
                <td>
                    Occupation
                </td>
                <td>
                    <select name="singleSelect" id="singleSelect" ng-model="createClientPremium.OccupationId" ng-change="calculateMonthlyPremium()">
                        <option value="0">--Please Select--</option>
                        <option value="1">Cleaner</option>
                        <option value="2">Doctor</option>
                        <option value="3">Author</option>
                        <option value="4">Farmer</option>
                        <option value="5">Mechanic</option>
                        <option value="6">Florist</option>
                    </select>
                </td>
            </tr>
            <tr>
                <td>Monthy Premium</td>
                <td><input type="text" ng-disabled="true" ng-model="createClientPremium.MonthlyPremium" />*</td>
            </tr>
            <tr class="heightContainer"></tr>
            <tr ng-show="validationMessage !== null">
                <td> Validation</td>
                <td style="color:red;"> {{validationMessage}}</td>
            </tr>
            <tr ng-show="successMessage !== null">
                <td> Validation</td>
                <td style="color:limegreen;"> {{successMessage}}</td>
            </tr>
            <tr>
                <td>
                    <input type="submit" value="Submit" ng-disabled="AddClientPremiumForm.$invalid" />
                </td>
              
            </tr>
        </table>
    </form>
</div>

